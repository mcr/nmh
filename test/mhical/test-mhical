EOF

cat >"$MH_TEST_DIR/test1.ics" <<'EOF'
BEGIN:VCALENDAR
METHOD:REQUEST
PRODID:test-mhical
VERSION:2.0

BEGIN:VTIMEZONE
TZID:Eastern Standard Time
BEGIN:STANDARD

SASL_INCLUDES = @SASL_INCLUDES@
INCLUDES = -I.. -I$(srcdir) -I$(top_srcdir) $(HESIOD_INCLUDES) $(SASL_INCLUDES)
LDFLAGS  = @LDFLAGS@

LIBS     = @LIBS@
